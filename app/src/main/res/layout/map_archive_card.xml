<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_map_archive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_archive_name"
            android:layout_alignParentTop="true"
            android:text="A map archive"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryTextBlack"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            />

        <ProgressBar
            android:id="@+id/unzip_progressbar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/map_archive_name"
            android:layout_marginTop="8dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:visibility="gone"
            />

        <Button style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unzip_archive_btn"
            android:text="@string/unzip"
            android:layout_below="@id/unzip_progressbar"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>